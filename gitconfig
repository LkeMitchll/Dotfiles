[init]
  templatedir = ~/.git_template
[user]
  name = LkeMitchll
  email = lke.mitchll@gmail.com
[alias]
  ch = checkout
  co = commit
  ca = commit --all
  caa = commit --all --amend
  sh = push
  sho = push origin
  ll = pull --rebase
  a = add
  aa = add --all
  s = status -sbu
  f = fetch
  fo = fetch origin
  d = diff
  ri = rebase --interactive
  rc = rebase --continue
  lg = log --graph --date=relative -10
  shom = push origin master
  reset-last-soft = reset --soft HEAD~1
  reset-last-hard = reset --hard HEAD~1
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor=nvim
  whitespace = space-before-tab,tab-in-indent,trailing-space
  pager = diff-so-fancy | less --tabs=4 -RFX
[color]
  ui = auto
[color "status"]
  header = cyan
  branch = white
  changed = yellow
  added = green
  untracked = cyan
[format]
  pretty = %Cred%h%Creset %aN -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset
[difftool]
  prompt = false
[diff]
  algorithm = histogram
[mergetool]
  prompt = false
  keepBackup = false
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[apply]
  whitespace = fix
[merge]
  ff = only
  conflictstyle = diff3
  tool = vimdiff
[push]
  default = current
[branch]
  autosetuprebase = always
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
