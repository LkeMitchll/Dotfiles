alias ls='ls -lA'
alias sl=ls
alias rpsec=rspec
alias finder='open .'
alias c='clear'

alias mech="cat ~/.mech"
alias easy-brew="brew update; brew upgrade --all"
alias housekeep="brew update;
                brew upgrade;
                rcup -v;
                vim-update;
                rbenv update;
                ~/.tmux/plugins/tpm/bin/update_plugins all"
alias vim-update="vim '+PlugUpdate' '+qa'"

# Web dev
alias mm="middleman"
alias nr="npm run"

# Git
alias git="hub"
alias g="git"
alias gs="git status"

# Rails
alias rdbm="rake db:migrate"
alias rdbs="rake db:setup"
alias rdbr="rake db:reset"

# Non CLI
alias showhidden="defaults write com.apple.Finder AppleShowAllFiles YES &&
killall Finder"
alias hidehidden="defaults write com.apple.Finder AppleShowAllFiles NO &&
killall Finder"
