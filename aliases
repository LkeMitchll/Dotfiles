alias ls='ls -lA'
alias sl=ls
alias rpsec=rspec
alias finder='open .'
alias c='clear'
alias vim='nvim'
alias vi='nvim'

alias easy-brew="brew update; brew upgrade --all"
alias vim-update="nvim '+call dein#update()' '+qa'"

function housekeep
  brew update
  brew upgrade
  rcup -v
  omf update
  fisher update
  rbenv update
  ~/.tmux/plugins/tpm/bin/update_plugins all
  vim-update
  omf reload
end

