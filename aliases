alias sl="ls"
alias rpsec="rspec"
alias finder='open .'
alias c='clear'
alias vim='nvim'
alias vi='nvim'

alias easy-brew="brew update; brew upgrade --all"
alias vim-update="nvim '+call dein#update()' '+qa'"
alias cpu="top -u -s 2"

housekeep() {
  brew update
  brew upgrade
  rcup -v
  rbenv update
  ~/.tmux/plugins/tpm/bin/update_plugins all
  vim-update
}

