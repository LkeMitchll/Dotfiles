alias ls="ls -lG"
alias sl="ls"
alias rpsec="rspec"
alias finder='open .'
alias c='clear'
alias vim='nvim'
alias vi='nvim'
alias z='source ~/.zshrc'

alias easy-brew="brew update; brew upgrade --all"
alias vim-update="nvim '+call dein#update()' '+qa'"
alias cpu="top -u -s 2"

# Update all the things
uatt() {
  local SEPERATOR="====================="
  brew update
  brew upgrade
  echo $SEPERATOR
  rcup -v
  echo $SEPERATOR
  rbenv update
  echo $SEPERATOR
  ~/.tmux/plugins/tpm/bin/update_plugins all
  echo $SEPERATOR
  mas outdated
  mas upgrade
  echo $SEPERATOR
  vim-update
}

# Cleanup
housekeep() {
  brew cleanup
  brew cask cleanup
  nvm cache clear
}

