  "emmet.includeLanguages": { "eruby": "html", "javascript": "css" },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split",
    "<C-t>": "action:tabe",
    "<C-z>": "do:toggle"
