[core]
  excludesfile = ~/.config/git/gitignore
  editor = nvim
[init]
  defaultBranch = main
[branch]
  autosetuprebase = always
[merge]
  tool = nvimdiff
  conflictstyle = diff3
  ff = only
[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
  default = current
[pull]
  rebase = true
[rebase]
  autosquash = true
