alias ls="ls -lG"
alias sl="ls"
alias rpsec="rspec"
alias finder='open .'
alias c='clear'
alias vim='nvim'
alias vi='nvim'
alias z='source ~/.zshrc'

alias easy-brew="brew update; brew upgrade --all"
alias vim-update="nvim '+call dein#update()' '+qa'"
alias cpu="top -u -s 2"

# Update all the things
uatt() {
  local SEPERATOR="====================="
  brew update
  brew upgrade
  echo $SEPERATOR
  rcup -v
  echo $SEPERATOR
  ~/.tmux/plugins/tpm/bin/update_plugins all
  echo $SEPERATOR
  antigen selfupdate
  antigen update
  echo $SEPERATOR
  asdf update
  asdf plugin-update --all
  echo $SEPERATOR
  mas outdated
  mas upgrade
  echo $SEPERATOR
  vim-update
  waiter 5
}

# Cleanup
housekeep() {
  brew cleanup
  brew cask cleanup
}

# Wait for x seconds then clear
waiter() {
  echo "Waiting for $1 seconds"
  sleep $1
  clear
}

